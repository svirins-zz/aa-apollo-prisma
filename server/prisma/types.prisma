
type User {
  id:           ID!          @id
  name:         String!      @unique
  email:        String!      @unique
  password:     String!
  groups:       [Group!] 
  events:       [Event!]
}

type Group {
  id:           ID!           @id
  createdAt:    DateTime!     @createdAt
  author:       User!         @relation(link: INLINE)
  name:         String!       @default(value: "New AA Group")
  description:  String!       @default(value: "Some descriptive description")
  city:         String!
  region:       regionType!   
  isActive:     Boolean       @default(value: true)
  phone:        String
  email:        String
  address:      String
  location:     Location
  meetings:     [Meeting!]! 
}

type Meeting  {
  id:           ID!           @id
  group:        Group!        @relation(link: INLINE)
  name:         String!       @default(value: "New AA Meeting")
  weekday:      Weekday!
  time:         DateTime! 
  type:         meetingType
} 

type Event {
  id:           ID!           @id
  author:       User!         @relation(link: INLINE)
  name:         String!       
  date:         DateTime!     
  city:         String!
  description:  String!       
  agenda:       String        
  contact:      String   
}

type Location {
  id: ID! @id
  lattitude: Float
  longitude: Float
}